#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/home/workspace/mflix-js/node_modules/.pnpm/npm-check-updates@3.2.2/node_modules/npm-check-updates/bin/ncu/node_modules:/home/workspace/mflix-js/node_modules/.pnpm/npm-check-updates@3.2.2/node_modules/npm-check-updates/bin/node_modules:/home/workspace/mflix-js/node_modules/.pnpm/npm-check-updates@3.2.2/node_modules/npm-check-updates/node_modules:/home/workspace/mflix-js/node_modules/.pnpm/npm-check-updates@3.2.2/node_modules:/home/workspace/mflix-js/node_modules/.pnpm/node_modules:/home/workspace/mflix-js/node_modules:/home/workspace/node_modules:/home/node_modules:/node_modules:/home/workspace/mflix-js/node_modules/npm-check-updates/bin/ncu/node_modules:/home/workspace/mflix-js/node_modules/npm-check-updates/bin/node_modules:/home/workspace/mflix-js/node_modules/npm-check-updates/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../npm-check-updates/bin/ncu" "$@"
else 
  exec node  "$basedir/../npm-check-updates/bin/ncu" "$@"
fi
